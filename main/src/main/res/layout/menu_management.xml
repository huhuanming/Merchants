<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F7"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        >
        <ImageView
            android:id="@+id/menu_management_menu_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:layout_margin="5dp"
            android:background="@drawable/titlebar_menu_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:text="@string/menu_management"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6"
        />
    <com.merchants.main.View.Listview.PinnedHeaderExpandableListView
        android:id="@+id/menu_management_expandablelistView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@null"
        android:childDivider="#afafaf"
        android:childIndicatorLeft="0dp"
        android:divider="#e0e0e0"
        android:dividerHeight="1dp"
        android:groupIndicator="@null"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        />
</LinearLayout>