<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:id="@+id/menu_management_lastitem_layout"
    android:clickable="true"
    android:background="@drawable/background_style"
    >

    <TextView
        android:id="@+id/menu_management_lastitem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:textColor="@color/bbutton_info_edge"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_above="@id/menu_management_lastitem_text"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EBEBEB"
        />
    <TextView
        android:layout_below="@id/menu_management_lastitem_text"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EBEBEB"
        />
</RelativeLayout>